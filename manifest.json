{
  "manifest_version": 3,
  "name": "UpEasy - Experience Next Gen Subscription!",
  "version": "1.0",
  "description": "Experience the Next Generation of Subscriptions with us",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'"
  },
  "permissions": [
    "cookies",
    "clipboardRead",
    "tabs",
    "activeTab",
    "storage",
    "scripting",
    "system.display"
  ],
  "incognito": "split",
  "host_permissions": ["https://admin.upeasybd.com/*", "<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
